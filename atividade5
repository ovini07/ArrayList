package tratamento;

import java.util.ArrayList;

public class atv3 {

	public static void main(String[] args) {
		ArrayList<String>nomes = new ArrayList<>();
		nomes.add("Alice");
		nomes.add("Bob");
		nomes.add("Charlie");		   
        try {
            System.out.println("Nome: " + nomes.get(2));
        } catch (IndexOutOfBoundsException erro) {
            System.out.println("Erro: Índice fora do intervalo. Verifique se o índice existe no ArrayList.");
        }
    }
}
